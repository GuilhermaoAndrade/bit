<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemVendaActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_agenda"
        android:hint="ID VENDA"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cliente_agenda"
        android:hint="ID PRODUTO"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/funcionario_agenda"
        android:hint="DESCRICAO"/>



    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="ADD"
        android:id="@+id/button_add"
        android:layout_gravity="center"
        android:background="@drawable/btn_padrao"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="15dp"

        />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="DELETE"
        android:id="@+id/button_delete"
        android:onClick="delete_itemvenda"
        android:layout_gravity="center"
        android:background="@drawable/btn_padrao"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="UPDATE"
        android:id="@+id/button_update"
        android:onClick="update_itemvenda"
        android:layout_gravity="center"
        android:background="@drawable/btn_padrao"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="LIST"
        android:id="@+id/button_list"
        android:onClick="list_itemvenda"
        android:layout_gravity="center"
        android:background="@drawable/btn_padrao"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="large text"
        android:id="@+id/tvagenda"
        android:gravity="center"/>

</LinearLayout>