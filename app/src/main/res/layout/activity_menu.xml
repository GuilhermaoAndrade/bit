<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu"
    android:gravity="center"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/clientebutton"
        android:text="Venda"
        android:onClick="clientebutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/funcionariobutton"
        android:text="Produto"
        android:onClick="funcionariobutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/agendabutton"
        android:text="Item Venda"
        android:onClick="agendabutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"
        />

    </LinearLayout>



</LinearLayout>