<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu"
    android:gravity="center"
    android:background="#000"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skull Filmes"
        android:layout_gravity="center"
        android:textColor="#ffff"
        android:textSize="50dp">

    </TextView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/clientebutton"
        android:text="Filme"
        android:onClick="clientebutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/funcionariobutton"
        android:text="Gênero"
        android:onClick="funcionariobutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"

        />






    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/agendabutton"
        android:text="Edição"
        android:onClick="agendabutton"
        android:background="@drawable/btn_padrao"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="15dp"
        />


</LinearLayout>


</LinearLayout>